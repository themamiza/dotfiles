#!/bin/sh

unmountusb()
{
	[ -z "$drives" ] && exit
	chosen="$(echo "$drives" | dmenu -i -p "Unmount which drive?")" || exit 1
	chosen="$(echo "$chosen" | awk '{print $1}')"
	[ -z "$chosen" ] && exit
	sudo -A umount "$chosen" && notify-send "ðŸ’» USB unmounting" "$chosen unmounted"
}

unmountandroid()
{
	chosen="$(awk '/simple-mtpfs/ {print $2}' /etc/mtab | dmenu -i -p "Unmount which device")" || exit 1
	[ -z "$chosen" ] && exit
	sudo -A umount -l "$chosen" && notify-send "ðŸ¤– Android unmounting" "$chosen unmounted"
}

asktype()
{
	choice="$(printf "USB\\nAndroid" | dmenu -i -p "What kind of device do you want to unmount?")" || exit 1
	case "$choice" in
		USB) unmountusb;;
		Android) unmountandroid;;
	esac
}

drives=$(lsblk -nrpo "name,type,size,mountpoint,label" | awk -F':' '{gsub(/ /,":")}$4!~/\/boot|\/efi|\/home$|SWAP/&&length($4)>1{printf "%s (%s) %s\n",$4,$3,$5}')

if ! grep simple-mtpfs /etc/mtab; then
	[ -z "$drives" ] && printf "No drives to unmount\n" && exit
	printf "Unmountable USB drives detected\n"
	unmountusb
else
	if [ -z "$drives" ]; then
		printf "Unmountable Android device(s) detected\n"
		unmountandroid
	else
		printf "Unmountable USB drive(s) and Android device(s) detected\n"
		asktype
	fi
fi
