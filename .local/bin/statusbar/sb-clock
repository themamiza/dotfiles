#!/bin/sh

clock=$(date "+%I")

case "$clock" in
	"00") icon="🕛";;
	"01") icon="🕐";;
	"02") icon="🕑";;
	"03") icon="🕒";;
	"04") icon="🕓";;
	"05") icon="🕔";;
	"06") icon="🕕";;
	"07") icon="🕖";;
	"08") icon="🕗";;
	"09") icon="🕘";;
	"10") icon="🕙";;
	"11") icon="🕚";;
	"12") icon="🕛";;
esac

case $BLOCK_BUTTON in
	1) notify-send "This month:" "$(cal | sed "s/\<$(date +'%e')\>/<b><span color='red'>&<\/span><\/b>/")";;
	3) notify-send "📅 Time/date module";;
	6) "$TERMINAL" -e "$EDITOR" "$0";;
esac

date "+%Y %b %d (%a) $icon%I:%M%p"
