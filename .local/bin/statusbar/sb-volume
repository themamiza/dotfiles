#!/bin/sh

sb_pulseaudio() {
	case $BLOCK_BUTTON in
		1) setsid -f "$TERMINAL" -e pulsemixer;;
		2) pamixer -t;;
		4) pamixer --allow-boost -i 1;;
		5) pamixer --allow-boost -d 1;;
		3) notify-send "ðŸŽµ Volume module" "\- Shows volume ðŸ”Š, ðŸ”‡ if muted.
	- Middle click to mute.
	- Scroll to adjust volume.";;
		6) "$TERMINAL" -e "$EDITOR" "$0";;
	esac

	[ "$(pamixer --get-mute)" = true ] && echo ðŸ”‡ && exit

	vol="$(pamixer --get-volume)"

	if [ "$vol" -gt "70" ]; then
		icon="ðŸ”Š"
	elif [ "$vol" -gt "30" ]; then
		icon="ðŸ”‰"
	elif [ "$vol" -gt "0" ]; then
		icon="ðŸ”ˆ"
	else
		echo ðŸ”‡ && exit
	fi

	echo "$icon$vol"
}

sb_wireplumber() {
	case $BLOCK_BUTTON in
		1) setsid -f "$TERMINAL" -e qpwgraph;;
		2) wpctl set-mute @DEFAULT_SINK@ toggle;;
		4) wpctl set-volume @DEFAULT_SINK@ 1%+;;
		5) wpctl set-volume @DEFAULT_SINK@ 1%-;;
		3) notify-send "ðŸŽµ Volume module" "\- Shows volume ðŸ”Š, ðŸ”‡ if muted.
	- Middle click to mute.
	- Scroll to adjust volume.";;
		6) "$TERMINAL" -e "$EDITOR" "$0";;
	esac

	wpctl get-volume @DEFAULT_SINK@ | grep -qs "MUTED" && echo ðŸ”‡ && exit

	vol="$(wpctl get-volume @DEFAULT_SINK@ | awk '{print $2}' | sed "s/\.//;s/^0*//")"

	if [ "$vol" -gt "70" ]; then
		icon="ðŸ”Š"
	elif [ "$vol" -gt "30" ]; then
		icon="ðŸ”‰"
	elif [ "$vol" -gt "0" ]; then
		icon="ðŸ”ˆ"
	else
		echo ðŸ”‡ && exit
	fi

	echo "$icon$vol"
}

[ -x "$(command -v wpctl)" ] && sb_wireplumber || sb_pulseaudio
