#!/bin/sh

bgloc="${XDG_DATA_HOME:-$HOME/.local/share}/bg"

trueloc="$(readlink -f "$1")" &&
	case "$(file --mime-type -b "$trueloc")" in
		image/*) ln -sf "$(readlink -f "$1")" "$bgloc" && notify-send -i "$bgloc" "Changing wallpaper...";;
		inode/directory) ln -sf "$(find "$trueloc" -iregex '.*.\(jpg\|jpeg\|png\)' -type f | shuf -n 1)" "$bgloc" && notify-send -i "$bgloc" "Random wallpaper chosen.";;
		*) notify-send "Error" "Not a valid image."; exit 1;;
	esac

command -v identify 2>/dev/null 1>&2 && identify -format '%w %h %i\n' -- "$bgloc" | \
	while read W H FN; do
		[ "$W" -lt "$H" ] && xwallpaper --maximize "$bgloc" || xwallpaper --zoom "$bgloc"
	done || xwallpaper --zoom "$bgloc"
